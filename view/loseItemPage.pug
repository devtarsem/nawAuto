                            label.label Item Two
                            input.input.key-2(placeholder='purse...' type='text')
                        .credentail.flex-3.flex-dir.gap08 
                            label.label Item Three 
                            input.input.key-3(placeholder='laptop...' type='text')
                        .credentail.flex-3.flex-dir.gap08 
                            label.label Item Four 
                            input.input.key-4(placeholder='clothes...' type='text')
                        
                            
                            button.submitLoseItemAutoSide Submit now!

            section.lose-item-auto-side.pad16
                h1.lose-item-heading Lauguage left in Auto
                .lose-item-container-auto-side.grid.grid-2-col.gap16
                    each item in lost
                        .item-1-left-auto-side.flex-1.fle-dir.gap16 
                            .driver-details-loss.flex-1.flex-dir.gap08
                                img(src='/img/customer1.jpg').driver-img-item-left
                                p.driver-name-item-left.keyword= `Driver Name :- ${item.driver.name}`
                                p.driver-autoNumber-item-left.keyword= `Driver auto number :- ${item.driver.autoNumber}` 
                                p.driver-mobile-item-left.keyword= `Mobile :- ${item.driver.phoneNumber}` 

                            .key-nishani-of-item 
                                .credential.flex-1.flex-dir.gap08
                                    h2.sub-head-lose-item Items in lauguage
                                    ol.lose-item-keys.grid.grid-2-col.gap08
                                        li.keyword.key_1= `${item.key_1}`
                                        li.keyword.key_2= `${item.key_2}`
                                        li.keyword.key_3= `${item.key_3}`
                                        li.keyword.key_4= `${item.key_4}`
                                        li.keyword.key_5= `${item.key_5}`  
