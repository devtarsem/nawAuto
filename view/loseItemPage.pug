        section.section-side-side.grid.grid-2-col

            section.filling-lose-item.pad16 
                .filling-lose-item-container 
                    h2.form-heading-lose-item Filling lose item
                    form.flex-1.flex-dir.gap16.form-lose-item-fill-from-auto-driver    
                        .credentail.flex-3.flex-dir.gap08 
                            label.label Item One 
                            input.input.key-1(placeholder='chain...' type='text')
